/* pages/record/record.wxss */

.record {
  height: 100%;
}

.record .info {
  width: 100%;
  height: 192rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  color: #fff;
  font-size: 24rpx;
}

.record .info::before {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: -2;
  content: ' ';
  background: #fff;
}

.record .info::after {
  position: absolute;
  left: -125rpx;
  right: 0;
  bottom: 0;
  z-index: -1;
  content: ' ';
  height: 192rpx;
  width: 1000rpx;
  border-radius: 0 0 100% 100%;
  background-color: #ffb451;
}

.record .info .box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 110rpx;
}

.record .info .box:last-of-type {
  margin-right: 0;
}

.record .info .box .img_box {
  font-size: 48rpx;
  color: #fff;
}

.record .info .box .img_box view {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.record .info .box2 .img_box view {
  box-sizing: border-box;
  align-items: flex-start;
  padding-top: 52rpx;
}

.record .info .box2 .img_box {
  position: relative;
  width: 152rpx;
  height: 116rpx;
}

.record .info .box2 .img_box image {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 152rpx;
  height: 116rpx;
}

.record .info .box .name {
  margin-top: 40rpx;
}

.record .info .box2 .name {
  margin-top: 14rpx;
}

/* tab */

.tab {
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.tab view {
  flex: 1;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  font-size: 30rpx;
  color: #999;
  /* margin-right: 142rpx; */
  position: relative;
}

/* .tab view:first-of-type {
  margin-right: 155rpx;
}

.tab view:last-of-type {
  margin-right: 0;
} */

.tab view.active {
  color: #333;
}

.tab view.active::after {
  position: absolute;
  display: block;
  content: '';
  width: 60rpx;
  height: 4rpx;
  background: #ffb451;
  border-radius: 2rpx;
  left: 0;
  right: 0;
  bottom: 10rpx;
  margin: auto;
}

/* swiper */

.swiper_tab {
  box-sizing: border-box;
  height: 100%;
}

.card {
  width: 690rpx;
  height: 232rpx;
  margin: 0 auto 20rpx;
  box-shadow: 0rpx 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.1);
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  position: relative;
}

.card::after {
  display: block;
  content: '';
  width: 8rpx;
  height: 40rpx;
  border-right: 3rpx solid #ebebeb;
  border-left: 3rpx solid #ebebeb;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 30rpx;
  margin: auto;
}

.wrap {
  padding-top: 18rpx;
}

.card:last-of-type {
  margin-bottom: 82rpx;
}

.card .left {
  width: 160rpx;
  box-sizing: border-box;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  opacity: 0.8;
  border-radius: 12rpx 0 0 12rpx;
}

.card .left .status {
  margin: 28rpx auto 13rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.card .left.active_1 {
  background: #47d174;
}

.card .left.active_2 {
  background: #ffb452;
}

.card .left.active_3 {
  background: #8a8a8a;
}

.card .left.active_4 {
  background: #8a8a8a;
}

.card .left image {
  width: 60rpx;
  height: 60rpx;
}

.card .right {
  flex: 1;
  box-sizing: border-box;
  padding: 40rpx 0 0 50rpx;
}

.card .right .r1 {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.card .right  .r2 {
  color: #666;
  font-size: 20rpx;
  margin: 10rpx 0 10rpx 0;
  width: 80%;
  line-height: 1.2;
  height: 52rpx;
}

.card .right .r3 {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 19rpx;
  padding-left: 37rpx;
  position: relative;
}

.card .right .icon {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.card .right .r4 {
  font-size: 24rpx;
  color: #333;
  padding-left: 37rpx;
  position: relative;
}

.no {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #b2b2b2;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-top: 98rpx;
  width: 100%;
}

.no image {
  width: 300rpx;
  height: 311rpx;
  margin-bottom: 39rpx;
}
