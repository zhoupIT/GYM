/**index.wxss**/

page {
  background: #fff;
}

.mainView {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.gridView {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-right: -10rpx;
  padding-bottom: 10rpx;
}

.item {
  width: calc(50% - 10rpx);
  margin-right: 10rpx;
  height: 200rpx;
  background-color: #fff;
  margin-top: 10rpx;
}

.item image{
  display:block;
  max-width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
