/**index.wxss**/

page {
  background: #fff;
}

.swiper-warp {
  position: relative;
  background: #fff;
}

.imageCount {
  width: 80rpx;
  height: 44rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 22rpx;
  line-height: 44rpx;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  right: 30rpx;
  bottom: 0rpx;
}

.swiper-1 {
  width: 100%;
  height: 170rpx;
  background: #ffb451;
}

.swiper-2 {
  width: 100%;
  height: 121rpx;
  background: #fff;
}

swiper {
  height: 276rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}

.slide-image {
  position: absolute;
  height: 220rpx;
  width: 690rpx;
  border-radius: 12rpx;
  z-index: 5;
  opacity: 0.7;
  top: 0;
  bottom: 0;
  margin: auto 14rpx;
}

.active {
  opacity: 1;
  z-index: 10;
  height: 276rpx;
  width: 690rpx;
  top: 0;
  left: 0;
  right: 0;
  transition: all 0.2s ease-in 0s;
}

/* swiper dot */

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dot {
  margin: 0 8rpx;
  width: 20rpx;
  height: 4rpx;
  background: #fff;
  transition: all 0.6s;
}

.dot.active {
  background: #ffb451;
}

/* tab */

.tab {
  padding: 40rpx 0 15rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabList {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  margin-right: 83rpx;
}

.tabList:last-of-type {
  margin-right: 0;
}

.tabList .icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 22rpx;
}

.tabList .text {
  font-size: 24rpx;
  color: #333;
  font-weight: 400;
}

/* samll banner */

.small_banner {
  width: 100%;
  height: 160rpx;
  background: #fff;
  margin: 0 auto;
  position: relative;
}

.small_banner .img1 {
  display: block;
  width: 750rpx;
  height: 150rpx;
  margin: 0 auto;
}

.small_banner .img2, .small_banner .img3 {
  width: 97rpx;
  height: 97rpx;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 50rpx;
  margin: auto;
}

.small_banner .img2 {
  animation: jump2 1s linear infinite;
}

.small_banner .img3 {
  animation: jump1 1s linear infinite;
}

@keyframes jump1 {
  0% {
    transform: scale(0.5);
  }

  50% {
    transform: scale(1);
  }

  100% {
    transform: scale(0.5);
  }
}

@keyframes jump2 {
  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(0);
  }
}

