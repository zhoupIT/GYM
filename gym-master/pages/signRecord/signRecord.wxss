/**index.wxss**/

page {
  background: rgba(0, 0, 0, 0.08);
}

.mainView {
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.mainView .body {
   background-color: #fff;
   padding: 20rpx;
   border-radius: 12rpx;
   box-shadow: 0px 2rpx 10rpx 0rpx rgba(0, 0, 0, 0.08);
   display:flex;
   flex-direction: column;
}

.mainView .body .signTime {
  font-size: 30rpx;
  color: #4c4c4c;
  margin-top: 10rpx;
}

.mainView .body .timeSlot {
  font-size: 25rpx;
  color: #c3c3c3;
  margin-top: 10rpx;
}

.mainView .body .courseName {
  font-size: 25rpx;
  color: #c3c3c3;
  margin-top: 10rpx;
}

.mainView .body .coachName {
  font-size: 25rpx;
  color: #c3c3c3;
  margin-top: 10rpx;
}

.nothing {
  width: 100%;
  min-height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #b2b2b2;
  font-size: 28rpx;
}

.nothing image {
  width: 300rpx;
  height: 311rpx;
  margin: 0rpx auto 39rpx;
}
